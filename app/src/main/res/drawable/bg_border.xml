<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White background -->
    <solid android:color="@color/white" />

    <!-- Orange border -->
    <stroke
        android:width="4dp"
        android:color="@color/blue" />

    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <!-- Inner padding -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />

</shape>
