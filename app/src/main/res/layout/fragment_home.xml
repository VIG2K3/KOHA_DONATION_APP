<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".HomeFragment">

    <!-- Center panel container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="40dp">

        <!-- Panel background around everything -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_edittext_left"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="40dp">

            <!-- Photo Icon (clickable, centered) -->
            <ImageView
                android:id="@+id/koha_icon"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/koha"/>

            <!-- KO-POINTS card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/blue"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/changePhotoBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="Change photo"
                        android:drawablePadding="80dp"
                        android:src="@drawable/points" />

                    <TextView
                        android:id="@+id/ko_points_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:text="KO-POINTS"
                        android:textColor="@color/orange"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ko_points_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="arial"
                        android:textColor="@color/orange"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Buttons inside panel -->
            <Button
                android:id="@+id/make_donation_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="@color/orange"
                android:text="Make Donation"
                android:textColor="@color/white"
                android:textSize="21sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/donation_category_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/orange"
                android:text="Donation Categories"
                android:textColor="@color/white"
                android:textSize="21sp"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
